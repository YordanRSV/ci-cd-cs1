# Copy this file to .env and fill in values for local development
# Database (used by docker-compose default values)
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_NAME=hrm_db
DATABASE_USER=hrm_user
DATABASE_PASSWORD=hrm_password

# Okta configuration
# Example OKTA_DOMAIN=https://dev-123456.okta.com
OKTA_DOMAIN=
# Create an API token in Okta Admin Console and paste it here
OKTA_API_TOKEN=

# Flask secret key (set to a random value in production)
SECRET_KEY=replace-with-a-random-secret
